<Page x:Class="GymGenius.Views.ExercisesPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:GymGenius.Views"
        xmlns:components="clr-namespace:GymGenius.Views.Components" 
        xmlns:utilities="clr-namespace:GymGenius.Utilities"
        mc:Ignorable="d" 
        Title="Exercices" MaxHeight="700" MaxWidth="1300" MinHeight="700" Width="1300">

    <Grid x:Name="All" Background="#99B0A5">
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="160"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <Grid  Grid.Row="0" x:Name="Title">
            <TextBlock Text="RECHERCHER VOS EXERCICES" Foreground="#6D887B" FontSize="30"  VerticalAlignment="Center" HorizontalAlignment="Center" />
        </Grid>
        <Grid Grid.Row="1" x:Name="rectangle" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid Background="#6D887B">
                <Grid x:Name="muscle" 
                      Margin="80, 30, 0, 0" 
                      HorizontalAlignment="Left">
                    <TextBlock Text="Muscles sollicités"
                               VerticalAlignment="Top"
                               FontSize="22" />
                    <CheckBox x:Name="jambe" Margin="0,40 0, 0" Content="Jambe" HorizontalAlignment="Left" VerticalAlignment="Top" IsThreeState="False" />
                    <CheckBox x:Name="epaule" Margin="0, 65, 0, 0" Content="Epaule" HorizontalAlignment="Left" VerticalAlignment="Top" IsThreeState="False" />
                    <CheckBox x:Name="tronc" Margin="70, 40, 0, 0" Content="Tronc" HorizontalAlignment="Left" VerticalAlignment="Top" IsThreeState="False" />
                    <CheckBox x:Name="dos" Margin="130, 40, 0, 0" Content="Dos" HorizontalAlignment="Left" VerticalAlignment="Top" IsThreeState="False" />
                    <CheckBox x:Name="bras" Margin="70, 65, 0, 0" Content="Bras" HorizontalAlignment="Left" VerticalAlignment="Top" IsThreeState="False" />
                </Grid>
            </Grid>
            <Grid Grid.Column="2" Background="#6D887B">
                <Grid x:Name="ouinon" 
                      Margin="80, 40, 100, 0" 
                      HorizontalAlignment="Center">
                    <TextBlock Text="Type d'exercise"
                               TextWrapping="Wrap"
                               VerticalAlignment="Top"
                               FontSize="22" />
                    <CheckBox x:Name="cardio" Margin="0,80 0, 0" Content="cardio" HorizontalAlignment="Left" VerticalAlignment="Top" IsThreeState="False" Checked="CheckBox_Checked" />
                    <CheckBox x:Name="musculaire" Margin="70, 80, 0, 0" Content="musculaire" HorizontalAlignment="Left" VerticalAlignment="Top" IsThreeState="False" Checked="CheckBox_Checked" />
                </Grid>
            </Grid>
            <Grid Grid.Column="4" Background="#6D887B">
                <Grid x:Name="difficulte"
                      HorizontalAlignment="Right">
                    <TextBlock Text="Difficulté max souhaitée"
               
                               Margin="0, 40, 100, 0" 
                               HorizontalAlignment="Right"
                               FontSize="22" />
                    <Grid>
                        <TextBox x:Name="numericTextBox" 
                                 Width="50" 
                                 Margin="0, 25, 270, 0" 
                                 Height="23" 
                                 PreviewTextInput="NumericTextBox_PreviewTextInput"
                                 Background="White" TextChanged="numericTextBox_TextChanged"/>
                    </Grid>
                    <Grid x:Name="buttonsearch" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0, 0, 20, 10">
                        <Button x:Name="BUTTON" Background="#567666" Width="30" Height="30" Cursor="Hand" Click="OnSearch_click">
                            <Image Source="{DynamicResource search}" Height="20" Width="20" />
                        </Button>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="2">
            <ScrollViewer  x:Name="exercice" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Exercises}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" Width="{Binding ActualWidth, ElementName=exercice}" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <components:ExerciseComponent
                                BorderColor="black"
                                Margin="5 5 5 5"
                                ExerciseName="{Binding ExerciseName}"
                                ExerciseDescription="{Binding ExerciseDescription}"
                                MouseLeftButtonDown="ExerciseComponent_MouseLeftButtonDown"
                                MouseLeftButtonUp="ExerciseComponent_MouseLeftButtonUp" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
        <Grid Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid>
                <Border Grid.Column="0" Background="#33443C" CornerRadius="5" Width="400" Height="80" Margin="0, 0, 10, 20">
                    <Button x:Name="buttonswitch" Background="Transparent" Click="CreateSessionButton" Cursor="Hand">
                        <!-- Add content for the button here -->
                        <TextBlock Text="Créer la séance" Foreground="White" Margin="5" FontSize="32"/>
                    </Button>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>
