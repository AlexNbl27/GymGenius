<UserControl x:Class="GymGenius.Views.Components.ExerciseComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="400"
             Height="250"
             xmlns:local="clr-namespace:GymGenius.Views"
             xmlns:utilities="clr-namespace:GymGenius.Utilities">

    <Border x:Name="Border" BorderThickness="5" BorderBrush="Black" CornerRadius="15">
        <Grid Background="#567666">
            <Grid x:Name="texte" Margin="20,10,0,0">
                <Grid>
                    <TextBlock x:Name="ExerciseNameTextBlock"
                               Text="{Binding Name}"
                               FontSize="20"
                               FontWeight="Bold"/>
                </Grid>
                <Grid VerticalAlignment="Bottom" Margin="0, 0, 0, 40">
                    <TextBlock x:Name="ExerciseDescriptionTextBlock"
                               Text="{Binding Description}"
                               FontSize="16" 
                               TextWrapping="Wrap"/>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</UserControl>

